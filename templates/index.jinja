            </div>
            <div class="figure figure-2">
              <img class="shadow" src="assets/images/venue/venue-2.jpg" alt="" />
            </div>
            <div class="figure figure-3">
              <img class="shadow" src="assets/images/venue/venue-3.jpg" alt="" />
            </div>
          </div>
          <!--//figures-holder-->
        </div>
        <!--//col-->
      </div>
      <!--//row-->
    </div>
    <!--//container-->
  </section>
  <!--//venue-section-->

  <section id="sponsors-section" class="sponsors-section section">
    <div class="container">
      <h3 class="section-heading text-center mb-3">
        Sponsors
      </h3>
      <div class="section-intro text-center single-col-max mx-auto mb-5">
