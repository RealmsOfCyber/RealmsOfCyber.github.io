{% for schedule_data in schedules %}
<div class="container">
    <hr>
</div>

<section id="{{ schedule_data.id }}" class="schedule-section section active">
    <div class="container">
        <h3 class="section-heading text-center mb-5">
            {% if is_year_page %}{{ schedule_data.title }} - ROCC{{ year }}{% else %}{{ schedule_data.title }}{% endif %}
        </h3>
        {% if schedule_data.subtitle %}
        <p class="text-center mb-4">{{ schedule_data.subtitle }}</p>
        {% endif %}
        {% if schedule_data.date %}
        <p class="text-center mb-4"><i class="far fa-calendar-alt me-2"></i>{{ schedule_data.date }}</p>
        {% endif %}
        <div class="schedule-tab-content tab-content">
            <div class="tab-pane active show" id="tab-{{ loop.index }}-content" role="tabpanel" aria-labelledby="tab-{{ loop.index }}">

                {% for schedule_item in schedule_data["items"] -%}
                {% if "speaker" in schedule_item.keys() %}
                <h2 class="fw-bolder text-primary mb-4 text-center">{{ schedule_item["name"] }}</h2>
                <div class="item item-talk">
                    <div class="meta">
                        <h4 class="time mb-3">{{ schedule_item["time"] }}</h4>
                        <div class="profile">
                            <a href="#{{ schedule_item["speaker"]["image"] }}" data-bs-toggle="modal" data-bs-target="#{{ schedule_item["speaker"]["image"] }}"><img class="profile-image rounded-circle mb-2" src="assets/images/{{ year }}/speakers/{{ schedule_item["speaker"]["image"] }}" alt=""></a>
                            <div class="name">
                                <a class="theme-link" href="#{{ schedule_item["speaker"]["image"] }}" data-bs-toggle="modal" data-bs-target="#{{ schedule_item["speaker"]["image"] }}">{{ schedule_item["speaker"]["name"] }}</a>
                            </div>
                        </div>
                    </div>
                    <div class="content">
                        <h3 class="title mb-3">
                            {{ schedule_item["title"] }}
                        </h3>
                        {% if schedule_item["logo"] != "NONE" %}
                        <div class="location mb-3">
                            <i class="fa-solid {{ schedule_item["logo"] }} me-2" aria-hidden="true"></i>
                            <b>{{ schedule_item["realm"] }} Realm</b>
                        </div>
                        <div class="desc">
                            {{ schedule_item["desc"] }}
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% else %}
                <div class="item item-other">
                    <div class="meta">
                        <h4 class="time mb-3">{{ schedule_item["time"] }}</h4>
                    </div>
                    <div class="content">
                        <h3 class="title mb-3">{{ schedule_item["title"] }}</h3>
                    </div>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>
{% endfor %}

