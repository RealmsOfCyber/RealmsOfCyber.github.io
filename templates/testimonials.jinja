{% if testimonials and testimonials|length > 0 %}
<section class="section theme-bg-light py-5">
  <div class="container">
    <h3 class="section-heading text-center mb-5">Experience highlights</h3>
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div style="background: white; border-radius: 15px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3); padding: 40px; max-width: 100%;">
          <div class="row">
            {% for testimonial in testimonials -%}
            <div class="col-md-6 mb-4">
              <div style="font-size: 1.1em; line-height: 1.6; color: #333; padding: 20px; border-left: 4px solid #667eea;">
                "{{ testimonial }}"
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!--//experience-highlights-->
{% endif %}